<div class="container">
  <h1>Create Student</h1>
  </br>
  <div class="span6" style="text-align: left">
    <form action="/students/create_new" method="POST">
    	<br>
    		<h3>Student Name</h3>
    		<input type="text" name="student[name]" placeholder="Name">  
    	<br>
    		<h3>Student Email</h3>
  	 		<input type="text" name="student[email]" placeholder="E-Mail">  
    	<br>
    		<h3>Class:</h3>
      		<%@courses.each do |course|%>
            <input type="checkbox" name="course[id]" value="<%=course.id%>" id="<%=course.name%>"><%=course.name%> / <%=course.period%></input>
          <%end%>
    	<br>
      <input type="submit" value="Submit">
    </form>
  </div>
</div>